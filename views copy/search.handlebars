<div class="row">
<div class="container">
  <div class="boxs">  
  <div class="col-md-12">
      <div class="wow bounceIn text-center" data-wow-offset="0" data-wow-delay="0.8s">
          <h1 style="color: #f7b733" >Search for Service</h1> 
          <div class="icon">
            <i class="fa fa-search fa-5x"></i>

          </div>

          <div class="ficon">
            <form action="/service" method="POST">
              <select data-placeholder="" class="chosen-select" name="serviceId" style="width:350px;">
                <option  value="">Select Service Category</option>
                {{#each services}}

                <option value="{{this.dataValues.serviceId}}">{{this.dataValues.serviceName}}</option>
                

                {{/each}}
              </select>
              <br><br>
              <button type="submit" class="btn btn-lg btn-default" >Search</button>
              </form>
            </div>
      </div>
    </div>
  </div>
</div>
</div>