 <div class="container">
   <div class="row">
      
      <div class="text-center"><h1>{{serviceName}}</h1></div>
        
   </div>
</div>

 <div class="container">
   <div class="row">
    {{#each neighborFound}}
       <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="column">
                        <div class="panel panel-default">
                          <div class="panel-heading">{{this.firstName}}</div>
                              <div class="panel-body" style="margin:10px;">
                                  <BR><img src="img/logo.png" style="float:right; margin-right: 25px;">
                                  <p><b>Service Description:</b><br>{{this.description}}</p>
                                  {{#if this.discount}}  
                                  <p><b>Discount Offer:  </b>YES</p>
                                  {{else}}
                                   <p><b>Discount Offer:  </b>NO</p>
                                  {{/if}}

                                  <form action="/leaveMessage" method="POST">
                                  <input type="hidden" name="receiverId" value="{{this.userId}}">
                                 <!--  <input type="hidden" name="senderId" value="{{locals.user.userId}}"> -->
                                  <input type="hidden" name="receiverEmail" value="{{this.email}}">
                                  <button type="submit">Leave Message</button>
                                  </form>
                            
                               </div>
                       
                        </div>
                      </div>

                   
            </div>
        </div>
      </div>
        {{/each}}



