<h1 style="color: #f7b733" class="text-center">Add Service</h1>


<form action="/addedService" method="POST">
<label for="">Service Category</label><br><br>
<select data-placeholder="" class="chosen-select" name="serviceId" style="width:350px;">
  <option value="">Select Service Category</option>
  {{#each services}}
      
  <option value="{{this.dataValues.serviceId}}">{{this.dataValues.serviceName}}</option>
            
  {{/each}}
</select>
<BR><BR>
<div class="form-group">
    <label for="des">Service Description</label>
    <textarea class="form-control" rows="10" id="des" name="description" placeholder="Describe the service that you offer here"></textarea>
 </div>
<br><br>
 <div class="form-group">
    <label for="slee">Are you offering discount?</label><br>
    <input type="radio" name="discount" value="1" checked> YES<br>
    <input type="radio" name="discount" value="0"> NO
  </div>


<br><br>


<button type="submit" class="btn btn-lg btn-default" >Add My Service</button>


</form>
